<%=form_tag '/login', :html => { :class => "form-horizontal session" } do %>
  <% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
  <% end %>
  <div class="form-group">
    <%= label_tag 'Email', nil%>
    <%= text_field_tag :email, nil, :placeholder => 'Email', :class => 'form-control'%>
  </div>
  <div class="form-group" >
    <%= label_tag 'Password', nil%>
    <%= password_field_tag :password, nil, :placeholder => 'Password', :class => 'form-control' %>
  </div>
  <p>&nbsp;</p>
  <div class="form-group">
    <div class="login">
      <%= submit_tag 'Login', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>