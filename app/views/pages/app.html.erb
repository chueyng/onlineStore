<nav class="menu">
  <% if @current_user.present? %>
  <h3>Welcome <span id="currentUserName"><%= @current_user.name %></span></h3>

  <script>
    var app = app || {};
    app.current_user = <%= @current_user.to_json.html_safe %>;
  </script>

