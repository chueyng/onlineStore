<%= form_for @user, :html => { :multipart => true, :class => "form-horizontal user" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-3' %>
    <div class="col-lg-5">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-3' %>
    <div class="col-lg-5">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <% if @current_user.present? && @current_user.role == 'admin' %>
    <div class="form-group">
      <%= f.label :role, :class => 'control-label col-lg-3' %>
      <div class="col-lg-5">
        <%= f.select :role, [["Admin", "admin"], ["Chef", "chef"], ["Customer","customer"]], :class => 'form-control', :required => true %>
      </div>
      <%=f.error_span(:role) %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-lg-3' %>
    <div class="col-lg-5">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <%=f.error_span(:password) %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-lg-3' %>
    <div class="col-lg-5">
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:password_confirmation) %>
  </div>
  <div class="form-group">
      <%= f.label :image, :class => 'control-label col-lg-2'%>
      <div class="col-lg-5">
        <%= f.cl_image_upload :image, :class => 'form-control'%> <%= image_tag(@user.image) unless @user.image.nil? %>
      </div>
      <%= f.error_span(:image) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Register', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
